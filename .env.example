# Database
# Local development (SQLite):
DATABASE_URL=sqlite:///./data/autoapply.db
# Production (Azure SQL):
# DATABASE_URL=mssql+pyodbc://username:password@yourserver.database.windows.net/kangrats?driver=ODBC+Driver+18+for+SQL+Server&Encrypt=yes&TrustServerCertificate=no

# CV Loader
CV_LOADER_TYPE=local
CV_BASE_PATH=./cvs

# Azure Blob Storage (se CV_LOADER_TYPE=azure_blob)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER_NAME=cvs

# Playwright
HEADLESS=true
SLOW_MO=100
TIMEOUT=30000

# Dry Run Mode - test without submitting
DRY_RUN=true

# Rate Limiting
DELAY_BETWEEN_APPLICATIONS=5.0
MAX_APPLICATIONS_PER_RUN=50

# Screenshots
SAVE_SCREENSHOTS=true
SCREENSHOTS_PATH=./data/screenshots
# Screenshot mode: "all" = every step, "minimal" = before_submit + result only, "errors" = only on failure
SCREENSHOT_MODE=all
# Upload screenshots to Azure Blob Storage
UPLOAD_SCREENSHOTS_TO_BLOB=false

# Azure Service Bus (for worker/queue consumer mode)
# Get connection string from Azure Portal > Service Bus > Shared access policies
SERVICEBUS_CONNECTION_STRING=
SERVICEBUS_QUEUE_NAME=applications
