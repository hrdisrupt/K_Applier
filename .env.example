# Copy this file to .env.local and fill in real values.

# Database
# Local development (SQLite):
# DATABASE_URL=sqlite:///./data/autoapply.db
# Production (Azure SQL):
SERVER=
DRIVER=ODBC Driver 18 for SQL Server
DATABASE=
DB_USER=
DB_PASSWORD=

# CV Loader
CV_LOADER_TYPE=local
CV_BASE_PATH=./cvs

# Azure Blob Storage (if CV_LOADER_TYPE=azure_blob)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER_NAME=

# Playwright
HEADLESS=true
SLOW_MO=100
TIMEOUT=30000

# Dry Run Mode - test without submitting
DRY_RUN=true

# Rate Limiting
DELAY_BETWEEN_APPLICATIONS=5.0
MAX_APPLICATIONS_PER_RUN=50

# Screenshots
SAVE_SCREENSHOTS=true
SCREENSHOTS_PATH=/data/screenshots

# Azure Service Bus for queue-based processing
SERVICEBUS_CONNECTION_STRING=
SERVICEBUS_QUEUE_NAME=
